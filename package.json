		"@babel/core": "^7.13.10",
		"@babel/plugin-proposal-decorators": "^7.13.5",
		"@babel/preset-env": "^7.13.10",
		"@babel/preset-typescript": "^7.13.0",
		"@types/bcrypt": "^3.0.0",
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.21",
		"@types/jsonwebtoken": "^8.5.1",
