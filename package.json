	"nodemon": {
		"watch": [
			"Src"
		],
		"ext": "ts,json",
		"ignore": [
			"Src/**/*.spec.ts"
		],
		"exec": "ts-node ./Src/Index.ts"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "current"
					}
				}
			],
			"@babel/preset-typescript"
		],
		"plugins": [
			[
				"@babel/plugin-proposal-decorators",
				{
					"legacy": true
				}
			]
		]
	}
