/// libraries
import { Router, Request, Response, NextFunction } from 'express';

/// modules
import { __target__Service } from '../__target__s';
import { __target__ } from '../Models';

/// content
const route: string = '/__target_lower__';
const router: Router = Router();

// get all __target_lower__
router.get('/', async (req: Request, res: Response, next: NextFunction) => {
	res.locals.serviceResponse = await __target__Service.getAll();
	next();
});

// get single __target_lower__
router.get('/:id', async (req: Request, res: Response, next: NextFunction) => {
	const id: number = Number(req.params.id);
	res.locals.serviceResponse = await __target__Service.getSingle(id);
	next();
});

// create single __target_lower__
router.post('/', async (req: Request, res: Response, next: NextFunction) => {
	const __target_lower__: __target__ = req.body;
	res.locals.serviceResponse = await __target__Service.addSingle(__target_lower__);
	next();
});

// update single __target_lower__
router.put('/:id', async (req: Request, res: Response, next: NextFunction) => {
	const id: number = Number(req.params.id);
	const __target_lower__: __target__ = req.body;
	res.locals.serviceResponse = await __target__Service.updateSingle(id, __target_lower__);
	next();
});

// delete single __target_lower__
router.delete('/:id', async (req: Request, res: Response, next: NextFunction) => {
	const id: number = Number(req.params.id);
	res.locals.serviceResponse = await __target__Service.deleteSingle(id);
	next();
});

export default { router, route };
